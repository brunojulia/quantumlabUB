#:kivy 1.11.1

<MyScreenManager>:
    StartingScreen:
    PaquetScreen:
    GameScreen:
    
#Intentem dibuixar una mica jeje
<StartingScreen>:
    name:'starting'
    
    BoxLayout:
        orientation:'vertical'
        
        BoxLayout:
            spacing:self.height/10
            orientation:'vertical'
            padding: [self.width/5, 0]
            size_hint_y:2
            
            Button:
                id:s_to_p
                size_hint_y:1
                background_color:(0,0,0,1)
                markup:True
                text:'Editor'
                on_press: root.transition_SP()
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
            Button:
                id:s_to_g
                background_color:(0,0,0,1)
                markup:True
                text:'Game'
                on_press: root.transition_SG()
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                
<PaquetRectangle>:
    canvas:
        Color:
            rgba:0,0,0,1
        Rectangle:
            pos:self.pos
            size:self.size


<PaquetScreen>:
    name: 'paquet'
    box1: box1_id
    box2: box2_id
    box21: box21_id
    box3: box3_id
    box4: box4_id
    quadrat: quadrat_id
    #:set color_labels 1,1,1,1
    #:set black 0,0,0,1

    
    #############################MAINCANVAS############################
    FloatLayout:
        id:box1_id
        orientation:'vertical'   
        size_hint:1,1
        
    PaquetRectangle:
        id:quadrat_id
        size_hint:0.02,0.02

        pos:self.pos
        

                
    ###########################EDITON##############################3
    RelativeLayout:
        id:box4_id
        boxpx: box_px_id
        boxpy: box_py_id
        size_hint:0.25,0.5
        pos_hint:{'y':0.,'x':0.75}
        Widget:
            canvas.before:
                Color:
                    rgba:0.1,0.1,0.1,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
    
        Label:
            text:'Edition'
            pos_hint:{'x':0.1,'y':0.9}
            size_hint:0.8,0.1
            color: color_labels
            canvas.before:
                Color:
                    rgba:0,0,0,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
        
        Label:
            text:'p_x'
            pos_hint:{'x':0.2,'y':0.8}
            size_hint:0.05,0.1
            color:color_labels
        BoxLayout:
        #px slider
            id:box_px_id
            pxslider: px_slider_id
            orientation: 'horizontal'
            pos_hint:{'x':0.3,'y':0.8}
            size_hint:0.5,0.1
                        
            Slider:
                id: px_slider_id
                min: -10
                max: +10
                #cursor_image: 'Images/cursor.png'
                value: 0                  
                on_touch_up: 
                    root.changepx(self.value)
        
            
        Label:
            text:'p_y'
            pos_hint:{'x':0.2,'y':0.7}
            size_hint:0.05,0.1
            color:color_labels
        BoxLayout:
        #py slider
            id:box_py_id
            pyslider: py_slider_id
            orientation: 'horizontal'
            pos_hint:{'x':0.3,'y':0.7}
            size_hint:0.5,0.1
                        
            Slider:
                id: py_slider_id
                min: -10
                max: +10
                #cursor_image: 'Images/cursor.png'
                value: 0                                 
                on_touch_up: 
                    root.changepy(self.value)
        
        BoxLayout:
        #Initial position 
            orientation: 'vertical'
            pos_hint:{'x':0.05,'y': 0.47}
            size_hint:0.9,0.2
            
            Label:
                text:'Initial position'
                color: color_labels
            Button:
                text:'Select'
                on_press:root.editorfuns()
            
        Label:
            text:'Potential mode'
            pos_hint:{'x':0.05,'y':0.37}
            size_hint:0.9,0.1
        
        Button:
            text:'Draw'
            on_press:root.editorfun()
            pos_hint:{'x':0.05,'y':0.27}
            size_hint:0.9,0.1
        #Button:
        #    text:'Clear'
        #    on_press:root.clear()
        #    pos_hint:{'x':0.50,'y':0.27}
        #    size_hint:0.45,0.1
        
        Label:
            text:'Apply changes'
            pos_hint:{'x':0.05,'y':0.17}
            size_hint:0.9,0.1
            
        
        Button:
            text:'Okay'
            pos_hint:{'x':0.05,'y':0.07}
            size_hint:0.45,0.1
            on_press: root.applychanges(),root.modifypot()
        Button:
            text:'Reset'
            pos_hint:{'x':0.50,'y':0.07}
            size_hint:0.45,0.1
            on_press: root.reset()
        

        
    ################PARAMETERS##############################
    RelativeLayout:
        id:box3_id
        pxchange:pxchange.__self__
        pychange:pychange.__self__
        tempschange:tempschange.__self__
        longitudchange:longitudchange.__self__
        dxchange:dxchange.__self__
        dtchange:dtchange.__self__
        normachange:normachange.__self__
        energychange:energychange.__self__
        
        size_hint:0.25,0.5
        pos_hint:{'y':0.5,'x':0.75}
        Widget:
            canvas.before:
                Color:
                    rgba:0.3,0.3,0.3,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
    
        Label:
            text:'Parameters'
            pos_hint:{'x':0.1,'y':0.9}
            size_hint:0.8,0.1
            color: color_labels
            canvas.before:
                Color:
                    rgba:0,0,0,1
                Rectangle:
            
                    pos:self.pos
                    size:self.size
            
        ##Parametres que s'han de calcular amb el buto compute
        GridLayout:
            cols: 2
            spacing: self.height/7
            pos_hint:{'x':0,'y':0.45}
            size_hint:0.9,0.4
            Label:
                text:'Norma'
                color: color_labels
                
            Label:
                text:'0'
                id:normachange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
                    
                        
   
                
            Label:
                text:'Energia'
                color: color_labels
                
            Label:
                text:'0'
                id:energychange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
            Label:
                text:'L'                
                color:color_labels
            
            Label:
                text:'3'
                id:longitudchange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
                            
            Label:
                text:'temps'                
                color:color_labels
            Label:
                text:'0.00'
                id: tempschange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
        #Button:
        #    text:'Compute'
        #    on_press:root.compute_parameters()
        #    pos_hint:{'x':0.3,'y':0.57}
        #    size_hint:0.5,0.1
        #    background_normal:''
        #    background_color:0.6,0.6,0.6,1
            
        ##Parametres que canvien amb els butons de EDICIÓ
        
        Label:
            text:'Moment'
            pos_hint:{'x':0.1,'y':0.32}
            size_hint:0.8,0.1
            color: 0,0,0,1
            
        GridLayout:
            cols: 4
            spacing: self.height/7
            pos_hint:{'x':0,'y':0.22}
            size_hint:0.9,0.1
            Label:
                text:'p_x'
                color: color_labels
                
            Label:
                text:'0.00'
                id:pxchange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
            Label:
                text:'p_y'
                color: color_labels
                
            Label:
                text:'0.00'
                id:pychange
                color: black
                canvas.before:               
                    Rectangle:                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels


        Label:
            text:'Discretitzat'
            pos_hint:{'x':0.1,'y':0.12}
            size_hint:0.8,0.1
            color: 0,0,0,1
            
        GridLayout:
            cols: 4
            spacing: self.height/7
            pos_hint:{'x':0,'y':0.02}
            size_hint:0.9,0.1
            Label:
                text:'dx'
                color: color_labels
                
            Label:
                text:'0'
                id:dxchange
                color: black
                canvas.before:               
                    Rectangle:
                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels
            Label:
                text:'dt'
                color: color_labels
                
            Label:
                text:'0'
                id:dtchange
                color: black
                canvas.before:               
                    Rectangle:                
                        pos:self.pos
                        size:self.size
                        Color:
                            rgba:color_labels

#Control del flux del joc
    BoxLayout:
        id:box2_id
        size_hint:0.20,0.075
        pos_hint:{'y':0.,'x':0}
        orientation:'horizontal'
        height:50
        
        Button:
            text:'Compute'
            on_press: root.compute()
            background_color: 0,1,0,1
        Button:
            text:'Pause'
            on_press: root.pause()
            background_color: 1,0,0,1
    
    BoxLayout:
        id:box21_id
        size_hint:0.55,0.075
        pos_hint:{'y':0.,'x':0.2}
        orientation:'horizontal'
        height:50
        modechange: modechange.__self__
        
        
        Button:
            background_normal: 'prev.WEBP'
            background_down: 'prev.WEBP'
            on_press: root.modechange()
            
        Label:
            id:modechange
            text:'standard'
            color:0,0,0,1
        
        Button:
            background_normal: 'next.png'
            background_down: 'next.png'
            on_press: root.modechange()
        Button:
            text:'Back'
            on_press:root.transition_PS()
        

<GameScreen>:
